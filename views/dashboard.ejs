												<h2><a href="/course" title="">
														<%= user.courses[i].name %>
													</a></h2>
											</div>
											<div class="course-desc">
												<p>
													<%= user.courses[i].description %>
												</p>
											
												<form method="POST" action="/courses/release">
													<input type="hidden" name="course_id" value="<%= user.courses[i]._id %>">
													<button class="btn btn-lg text-white btn-warning">RELEASE</button>
												</form>
												
											</div>
										</div>
									</div>
									
							</div><!-- end col -->
							<% } %>
						</div><!-- end row -->
					</div><!-- end container -->
				</div><!-- end section -->
